    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="body">

  <header class="header">
    <nav class="navBar">
      <ul class="navBar__ul navBar__ul--left">
        <li class="navBar__liLeft">
          <a class="navBar__link" href="#"><i class="fas fa-bars navBar__icon navBar__icon--burguerMenu"></i></a>
