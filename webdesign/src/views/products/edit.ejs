<body class="body">
    <%- include('../partials/header') %>

        <main class="main">
            <h2 class="main__title">Edición de producto</h2>
            <form class="formProduct" action="/update?_method=PUT" method="POST">
                <fieldset class="formProduct__fieldset">
                    <label class="formProduct__label" for="">Nombre del producto</label>
                    <input class="formProduct__input" type="text" name="name" id="name"
                        value="<%= bikes.name %>">
                </fieldset>
                <fieldset class="formProduct__fieldset">
                    <label class="formProduct__label" for="">Descripción</label>
                    <textarea class="formProduct__textarea" name="description" id="description" cols="30"
                        rows="10"><%= bikes.description %></textarea>
                </fieldset>
                <fieldset class="formProduct__fieldset">
                    <label class="formProduct__label" for="">Imagen</label>
                    <input class="formProduct__input" type="file" name="gallery" id="gallery"
                        value="<%= bikes.gallery %>">
                </fieldset>
                <fieldset class="formProduct__fieldset">
                    <label class="formProduct__label" for="">Categoria</label>
                    <select class="formProduct__select" name="category" id="category"
                        value="<%= bikes.category %>">
                        <option class="formProduct__option" value="">Bicicleta</option>
                        <option class="formProduct__option" value="">Accesorio</option>
                    </select>
                </fieldset>

